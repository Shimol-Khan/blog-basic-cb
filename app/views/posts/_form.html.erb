
<%= simple_form_for(@post) do |f| %>

  <div class="form-inputs">
    <%= f.input :title, label: false, placeholder: 'Post Title' %>
    <%= f.input :subtitle, label: false, placeholder: 'Post Sub Title' %>
    <%= f.input :description, label: false, placeholder: 'Post Description', input_html:{rows: 8} %>
    <%= f.input :cover_image_link, label: false, placeholder: 'Post Cover Image URL' %>
    <%= f.association :author, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Submit', :class=>"btn btn-success" %>
    <%= link_to 'Back', posts_path, :class=>"btn btn-dark" %>
  </div>
<% end %>
