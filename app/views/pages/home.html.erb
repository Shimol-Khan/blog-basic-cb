<header class="masthead" style="background-image: url(<%= @author.home_cover_img%>)">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1><%= @author.home_title %></h1>
            <span class="subheading"><%= @author.home_subtitle %></span>
          </div>
        </div>
      </div>
    </div>
</header>

<div class="container">
    <div class="row">
      <div class="col-lg-10 col-md-10 mx-auto">
        <% @posts.each do |post| %>
          <div class="post-preview">
            <h2 class="post-title"><%= link_to post.title, post, :class=>"no-underline green" %></h2>
            <h4 class="post-subtitle text-justify"><%= link_to post.subtitle, post %></h4>
            <p class="post-meta text-justify"><%= post.created_at.strftime("%B, %d, %Y")%></p>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>

  <nav aria-label="Page navigation example" style="margin-top: 10px">
    <ul class="pagination pg-blue justify-content-center">
              <%= will_paginate(@posts,
              :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer,
              inner_window: 1,
              outer_window: 0,
              class: 'text-center') %>
    </ul>
  </nav>

  <%= render 'shared/footer' %>
