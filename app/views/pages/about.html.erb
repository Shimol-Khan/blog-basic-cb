<header class="masthead" style="background-image: url(<%= @author.about_cover_img%>)">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1><%= @author.about_title %></h1>
            <span class="subheading"><%= @author.about_subtitle %></span>
          </div>
        </div>
      </div>
    </div>
</header>

<div class="container">
    <div class="row">
      <div class="col-lg-10 col-md-10 mx-auto">
        <div class="card">
            <div class="card-body">
                <p class="lead text-justify"><%= @author.about%></p>
            </div>
        </div>
      </div>
    </div>
</div>

<%= render 'shared/footer' %>